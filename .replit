run = "python3 -m uvicorn main_slack:app --host 0.0.0.0 --port 8080"
language = "python3"
modules = ["python-3.11", "nodejs-20"]

[env]
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "pip install -r requirements.txt && npm install -g @anthropic-ai/claude-code"]
run = ["python3", "-m", "uvicorn", "main_slack:app", "--host", "0.0.0.0", "--port", "5000"]
deploymentTarget = "vm"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m uvicorn main_slack:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
