# Analytics Configuration Example
# Copy this to your .env file and adjust as needed

# ============= CORE ANALYTICS SETTINGS =============
# Enable/disable analytics features (default: false)
ANALYTICS_ENABLED=false

# Enable automatic weekly briefings (default: false)
ANALYTICS_AUTO_BRIEFING=false

# Day and time for auto-briefing (defaults: monday, 09:00)
ANALYTICS_BRIEFING_DAY=monday
ANALYTICS_BRIEFING_TIME=09:00

# Slack channel for briefings (default: content-strategy)
ANALYTICS_BRIEFING_CHANNEL=content-strategy

# ============= DATA SOURCES =============
# Use Airtable for post data (default: true)
ANALYTICS_USE_AIRTABLE=true

# Use Ayrshare for real engagement metrics (default: false)
# Requires AYRSHARE_API_KEY to be set
ANALYTICS_USE_AYRSHARE=false
AYRSHARE_API_KEY=your_ayrshare_api_key_here

# Use mock data when real data unavailable (default: true)
ANALYTICS_USE_MOCK_DATA=true

# ============= ANALYSIS PARAMETERS =============
# Minimum posts required for meaningful analysis (default: 5)
ANALYTICS_MIN_POSTS=5

# Days to look back for analysis (default: 7)
ANALYTICS_DAYS_LOOKBACK=7

# Include trending topic research in briefings (default: true)
ANALYTICS_INCLUDE_TRENDING=true

# ============= PERFORMANCE THRESHOLDS =============
# Engagement rate thresholds (as percentages)
ANALYTICS_HIGH_ENGAGEMENT=8.0  # Above this = high performer
ANALYTICS_LOW_ENGAGEMENT=3.0   # Below this = needs improvement

# ============= N8N WEBHOOK CONFIGURATION =============
# Optional webhook authentication (leave empty for no auth)
# N8N_WEBHOOK_SECRET=your-secret-token-here
#
# For n8n automation, use webhook URL:
# POST https://your-domain.com/api/n8n/weekly-briefing
#
# If N8N_WEBHOOK_SECRET is set, add to n8n HTTP Request node:
# Headers:
#   Authorization: Bearer your-secret-token-here
#
# Optional JSON body:
# {
#   "days_back": 7,
#   "slack_channel": "content-strategy",
#   "include_ayrshare": true
# }
#
# n8n Schedule Trigger Example:
# - Add Schedule Trigger node: Every Monday at 9am
# - Add HTTP Request node: POST to webhook URL
# - If N8N_WEBHOOK_SECRET is set, add Authorization header with Bearer token