#!/bin/bash
# Replit setup script
# Installs Claude Code CLI globally for Agent SDK

echo "ğŸ“¦ Installing dependencies..."

# Install Python dependencies
pip install -r requirements.txt

# Install Node.js dependencies
npm install

# Install Claude Code CLI globally (required for Agent SDK)
echo "ğŸ¤– Installing Claude Code CLI..."
npm install -g @anthropic-ai/claude-code

# Verify installation
if command -v claude &> /dev/null; then
    echo "âœ… Claude Code CLI installed successfully"
    claude --version
else
    echo "âš ï¸ Claude Code CLI not found in PATH"
    echo "   Trying to add to PATH..."
    export PATH="$HOME/.npm-global/bin:$PATH"
    if command -v claude &> /dev/null; then
        echo "âœ… Found after adding to PATH"
    else
        echo "âŒ Still not found - manual PATH setup may be needed"
    fi
fi

echo "âœ… Setup complete!"
